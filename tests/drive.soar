package require TinySoar;

# Drive forward until hell freezes over.
sp {propose*drive
    (state <s> ^superstate nil)
    -->
    (<s> ^operator <o> +)
    (<o> ^name drive)}

sp {implement*drive
    (state <s> ^operator <o> ^io <io>)
    (<o> ^name drive)
    (<io> ^output-link <out>)
    -->
    (<out> ^motor-a 100 ^motor-c 100)}

sp {drive*reconsider
    (state <s> ^operator <o>)
    (<o> ^name drive)
    -->
    (<s> ^operator <o> @)}
